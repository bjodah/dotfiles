#!/bin/bash
# -*- mode: shell-script-mode -*-

IMAGE=${IMAGE:-bjodahimg20dot:21.8.a}

podman run \
       -e TERM=xterm-256color\
       -e DISPLAY\
       -v /tmp/.X11-unix:/tmp/.X11-unix:rw\
       -v "$PWD":"$PWD" \
       -w "$PWD" \
       --detach-keys=ctrl-\] \
       --security-opt seccomp=unconfined \
       --rm \
       --name "bjodah" \
       -it ${IMAGE} \
       "$@"
