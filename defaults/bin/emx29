#!/bin/bash
# -*- mode: shellscript -*-
set -euo pipefail
show_help(){
    echo "Launches an instance of Emacs 29 (master branch)"
    echo ""
    echo "Usage:"
    echo "--broadway <display-number>   E.g. 5, then open http://localhost:8085"
}
USE_BROADWAY=""
while [ $# -gt 0 ]; do
    case "$1" in
        --broadway)
            shift
            USE_BROADWAY=$1
            shift
            ;;
        -h|--help|\?)
            show_help
            exit 0
            ;;
        *)
           show_help
           exit 1
           ;;
    esac
done
if [ ! -e ~/.emx29 ]; then
    mkdir ~/.emx29
fi
if [ ! -e ~/.emx29/.emacs-eln-cache ]; then
   mkdir ~/.emx29/.emacs-eln-cache
fi

set -x


cat <<EOF>>~/.emx29/.tmux.conf
unbind C-b
set -g prefix 'C-\'
bind 'C-\' send-prefix
set -g mouse on
set -g default-terminal "screen-256color"
set -g status-style "bg=blue"
set -g remain-on-exit on  # cf. respawn-pane & respawn-pane -k
set -g history-limit 15000  # default is 2000 lines
EOF

if [[ $USE_BROADWAY != "" ]]; then
    BJODAH_ARGS="-p 127.0.0.1:808$USE_BROADWAY:808$USE_BROADWAY"
    cat <<EOF>~/.emx29/launch.sh
tmux  -2 -S tmux-bjodah.sock -f /emx29/.tmux.conf new -s emx29 "broadwayd :$USE_BROADWAY" \
    \; new-window "GDK_BACKEND=broadway BROADWAY_DISPLAY=:$USE_BROADWAY /opt/emacs-pgtk-gcc-29/bin/emacs"
EOF
    TMUX_ARGS=""
    xdg-open "http://localhost:8085"
else
    BJODAH_ARGS=""
    cat <<EOF>~/.emx29/launch.sh
tmux -2 -S tmux-bjodah.sock -f /emx29/.tmux.conf new -s emx29 /opt/emacs-pgtk-gcc-29/bin/emacs
EOF

fi

bjodah \
    -v ~/.emx29:/emx29 \
    -v ~/.emx29/.emacs-eln-cache:/root/.emacs.d.29/eln-cache \
    $BJODAH_ARGS \
    -- "ln -s /root/.emacs.d.29 /root/.emacs.d && \
        bash /opt/bjodah-dotfiles/install_defaults.sh && \
        set -x; source /emx29/launch.sh"
