# -*- mode: dockerfile -*-
FROM bjodah/bjodahimg22base:22.3.a
MAINTAINER Bj√∂rn Dahlgren <bjodah@DELETEMEgmail.com>

COPY 100-setup_ubuntu_packages.sh 110-setup_llvm_clang.sh 130-setup_intel_compilers.sh 150-pip-install.sh 160-ccls.sh /opt/

RUN apt-get update \
    && /opt/100-setup_ubuntu_packages.sh  \
    && /opt/110-setup_llvm_clang.sh 14  \
    && /opt/130-setup_intel_compilers.sh  \
    && /opt/150-pip-install.sh  \
    && /opt/160-ccls.sh  \
    && apt-get clean && rm -rf /var/lib/apt/lists/* /tmp/* /var/tmp/* ~/.cache/pip

COPY 250-libqd.sh 270-sundials.sh /opt/

